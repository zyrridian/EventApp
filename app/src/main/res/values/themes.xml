<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.EventApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.EventApp" parent="Base.Theme.EventApp" />
    
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.EventApp</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_dicoding</item>
    </style>
    
</resources>